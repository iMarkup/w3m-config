  "data": {
    "path": "markup",
    "source": [
      { "matchValue": "git://github.com/iMarkup/grunt-base-template.git", "excludeIf": ["foundation"] },
      { "matchValue": "git://github.com/iMarkup/grunt-add-cms.git", "dependenciesAny": ["other_cms", "wp"] },
      { "matchValue": "git://github.com/iMarkup/grunt-add-wp.git", "dependenciesAll": ["wp"] },
      { "matchValue": "git://github.com/iMarkup/grunt-add-bootstrap.git", "dependenciesAny": ["bootstrap"] },
      { "matchValue": "https://github.com/iMarkup/grunt-add-foundation.git", "dependenciesAny": ["foundation"] },
      { "matchValue": "git://github.com/iMarkup/grunt-add-magento-19.git", "dependenciesAny": ["magento"] }
    ],
    "ignore": [
      { "matchValue": "scss/all.scss", "dependenciesAny": ["wp", "magento"] },
      { "matchValue": "scss/base/_cms-reset.scss", "dependenciesAny":["bootstrap", "magento", "foundation"] },
      { "matchValue": "scss/base/_base-reset.scss", "dependenciesAny":["other_cms", "wp", "bootstrap", "magento", "foundation"] },
      { "matchValue": "index.html", "dependenciesAll":["bootstrap", "wp"] },
      { "matchValue": "scss/index.html", "dependenciesAny": ["magento"] }
    ],
    "rename": [
      { "matchValue": {"wp-bootstrap-style.scss":"style.scss"}, "dependenciesAll": ["wp", "bootstrap"] },
      { "matchValue": {"wp-bootstrap-index.html":"index.html"}, "dependenciesAll": ["wp", "bootstrap"] }
    ],
    "run": [
      { "matchValue": "bower install", "dependenciesAny": ["foundation"] },
      { "matchValue": "npm install" },
      { "matchValue": "grunt" }
    ]
  }
}
